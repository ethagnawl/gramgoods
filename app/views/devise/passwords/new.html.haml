.page-header
  %h1 Forgot your password?

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => 'well', :method => :post }) do |f|
  .form-errors-wrapper
    = devise_error_messages!

  %fieldset
    = f.label :email
    = f.email_field :email

  %fieldset
    .form-actions
      = f.submit "Send me reset password instructions", :class => 'btn btn-primary'

= render "devise/shared/links"
