.page-header
  %h2 Resend unlock instructions

= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :class => 'well', :method => :post }) do |f|
  = devise_error_messages!

  %fieldset
    = f.label :email
    = f.email_field :email

  %fieldset
    .form-actions
      = f.submit "Resend unlock instructions", :class => 'btn btn-primary'

= render "devise/shared/links"
