!!! 5
%html
  %head
    %meta{ :charset => "utf-8" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    %meta{ :name => 'viewport', :content => 'user-scalable=no, width=320' }
    %meta{ :name => "stripe-key", :content => "#{STRIPE_CONFIG['PUBLIC_KEY']}" }
    %title
      - if content_for?(:title)
        = yield :title
      - else
        GramGoods
    = stylesheet_link_tag 'mobile', :media => "all"
    = csrf_meta_tags
  %body.mobile-layout{ :class => "#{params[:controller]}-#{params[:action]}" }
    #spin_wrapper.hide
      #spin
    - if defined? @store
      .store-header
        %h1
          - if content_for?(:header)
            = yield :header
          - else
            = @store.name
    = yield
    = include_gon
    = javascript_include_tag "https://js.stripe.com/v1/"
    %script
      Stripe.setPublishableKey("#{STRIPE_CONFIG['PUBLIC_KEY']}");
    = javascript_include_tag 'mobile'
