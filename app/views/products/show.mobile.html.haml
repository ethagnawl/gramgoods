#address_form.hide
#billing_form.hide
.product-detail
  .product
    .product-top.widget
      .product-thumbnail-gallery
        - @product.photos_array.each_with_index do |product_photo, index|
          = image_tag("#{product_photo}",
            :class => index == 0 ? 'product-thumbnail on' : 'product-thumbnail hide',
            :data => { :index => index })
        .product-gallery-controls.invisible
          - @product.photos_array.each_with_index do |product_photo, index|
            %a.product-gallery-control{ :href => 'javascript: void(0);', |
            :class => index == 0 ? 'on' : nil, :data => { :index => index } }
      %h1.product-name
        = @product.name
      .product-price
        Buy Now #{number_to_currency(@product.price)}
    .product-bottom.widget
      .widget
        %h2 Description
        %p
          = @product.description
      .widget
        %h2 Quantity
        - if @product.unlimited_quantity
          %input{ :type => 'number', :placeholder => 'Enter a Quantity' }
        - else
          %select
            - (1..@product.quantity.to_i).each do |n|
              %option{ :value => n }
                = n
      - unless @product.colors.empty?
        .widget
          %h2 Colors
          %select
            - @product.colors.split(',').each do |color|
              %option{ :value => color }
                = color
      - unless @product.sizes.empty?
        .widget
          %h2 Sizes
          %select
            - @product.sizes.split(',').each do |size|
              %option{ :value => size }
                = size
      - unless @product.flatrate_shipping_cost.nil?
        .widget
          %h2 Flat Rate Shipping Cost
          %p
            = number_to_currency(@product.flatrate_shipping_cost)
      .widget
        %a#show_address_form{ :href => 'javascript: void(0);' } Let's go! - TODO
