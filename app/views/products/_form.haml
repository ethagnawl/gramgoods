= render 'shared/form_errors', :target => @product

= form_for(@product) do |form|
  = form.hidden_field :store_id
  %fieldset
    = form.label :name
    = form.text_field :name
  %fieldset
    = form.label :description
    = form.text_field :description
  %fieldset
    = form.label :price
    = form.text_field :price
  %fieldset
    = form.label :quantity
    = form.text_field :quantity
  %fieldset
    = form.label :status
    = form.select :status, [:draft, :active, :out_of_stock]
  %fieldset
    = form.submit

