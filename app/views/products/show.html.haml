- unless @product.photos_array.empty?
  = render 'product_photos', :locals => { :product => @product, :product_photos => @product.photos_array, :source => 'static' }

%h1 Store: #{@store.name}

.widget
  Name:
  = @product.name
.widget

  Description:
  = @product.description

.widget
  Price:
  = number_to_currency(@product.price)

.widget
  Quantity:
  = @product.quantity

.widget
  Status:
  = @product.status

.widget
  Instagram Tag:
  = @product.instagram_tag

- unless @product.colors.nil?
  .widget
    Colors:
    = @product.colors

- unless @product.sizes.nil?
  .widget
    Sizes:
    = @product.sizes

- unless @product.flatrate_shipping_cost.nil?
  .widget
    Flat Rate Shipping Cost:
    = number_to_currency(@product.flatrate_shipping_cost)


= link_to('Back to Store', store_path(@store))
= link_to('Edit', edit_store_product_path(@store, @product))
= link_to('Delete', {:controller => 'products', :action => 'destroy', :product => @product, :store => @store}, :data => { :confirm =>"Are you sure you want to delete #{@product.name}?" }, :method => :delete)
