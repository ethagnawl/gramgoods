- configure_instagram(@user.authentications.first.uid, @user.authentications.first.access_token)
- tags = (Instagram.user_recent_media).find_all do |tag|
  - !tag['tags'].empty? && tag['tags'].include?(@product.instagram_tag)
- tags = tags.map { |tag| product_photo_url(tag) }
- tags = tags.concat(@product.photos.split(',')).uniq
.product-photos
  - tags.each do |tag|
    .product-photo
      = image_tag(tag)
- Instagram.reset

%h1 Store: #{@store.name}

.widget
  Name:
  = @product.name
.widget

  Description:
  = @product.description

.widget
  Price:
  = number_to_currency(@product.price)

.widget
  Quantity:
  = @product.quantity

.widget
  Status:
  = @product.status

.widget
  Instagram Tag:
  = @product.instagram_tag

- unless @product.colors.empty?
  .widget
    Colors:
    = @product.colors

- unless @product.sizes.empty?
  .widget
    Sizes:
    = @product.sizes

- unless @product.flatrate_shipping_cost.empty?
  .widget
    Flat Rate Shipping Cost:
    = number_to_currency(@product.flatrate_shipping_cost)


= link_to('edit', edit_store_product_path(@store, @product))
= link_to('back to store', store_path(@store))
= link_to("Delete #{@product.name}", @product, :data => { :confirm =>"Are you sure you want to delete #{@product.name}?" }, :method => :delete)
