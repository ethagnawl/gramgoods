- content_for(:title) { "#{@store.name} | GramGoods" }
- content_for(:header) do
  - if @is_customized_store
    %span.mobile-header-store-logo
      %a{ :href => custom_store_path(@store), :title => @store.name }
        %img{ :src => custom_merchant_logo_src(@store.slug), |
              :alt => @store.name }
  - else
    = @store.name

- if user_owns_store?(@store.id)
  - if current_user.allowed_to_create_products?
    - if @store.products(true).empty?
      = render 'shared/notice', :locals => { :notice => no_products_message(@store) }

  - else
    = render 'shared/alert', :locals => { :alert => 'You\'ll need to enter the following information before you can create a product.' }
    .widget
      %h1 Welcome to GramGoods: a simple way sell your products via Instagram.
      %h2 GramGoods charges 5% on all sales you make on our platform. Please enter your business name and address here. We send checks every 14 days.

      = render 'users/form', :locals => { user: current_user }

      %h2
        Please place http://gramgoods.com/#{@store.slug} in your Instagram profile. If you would like a custom subdomain like shopinstagram.thisisveda.com or your logo and colors added to your store please contact #{link_to 'admin@gramgoods.com', 'mailto:admin@gramgoods.com'}.

      %h2 Thanks and we look forward to helping you sell great products to your customers on Instagram.

- else
  = render 'shared/products'
= render 'shared/footer'
