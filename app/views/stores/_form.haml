= form_for @store, :url => stores_proxy_path do |form|
  .form-errors-wrapper
    = render 'shared/form_errors', :target => @store
  %fieldset
    = form.text_field :name, :placeholder => 'Store Name', |
                             :class => 'input-xlarge', |
                             :disabled => (true if params[:action] == 'edit')
    - if params[:action] == 'edit'
      %span.help-inline You cannot change your store's name.

  %fieldset
    = form.text_area :return_policy, :placeholder => :return_policy.to_s.titleize, :class => 'input-xlarge', :rows => 5

  %fieldset
    = check_box :store, :terms_of_service, :checked => true
    = label :store, :terms_of_service do
      By signing up you agree to the GramGoods
      %a{ :href => '/tos', :target => '_blank' } Terms of Service

  %fieldset
    = form.submit

.widget
  - if params[:action] == 'edit'
    = link_to('Back to Store', store_path(@store))
  - else
    = link_to('Back to Stores', stores_path())
