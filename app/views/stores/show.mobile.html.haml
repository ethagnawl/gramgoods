- content_for(:title) { "#{@store.name} | GramGoods" }
- content_for(:header) do
  %h1
    #{@store.name}
    - if user_signed_in? && user_owns_store?(@store.id)
      %br
      = link_to 'Logout', destroy_user_session_path
      |
      = link_to 'Edit', custom_store_edit_path(@store)
      |
      = link_to 'Create Product', new_store_product_path(@store.slug)

= render 'shared/products', :locals => { :products => @products }
